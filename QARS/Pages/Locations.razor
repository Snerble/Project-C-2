@page "/locations"
@*Deze razor component is voor het aanmaken van locations pagina*@

<h1>Locations work in progress</h1>

<style>
    button {
        font-size: 40px;
        padding: 10px;
        border-radius: 10px;
        margin: 10px;
        float: left;
        margin-left: auto;
    }

    #container {
        text-align: center;
        align-items: center;
        margin-left: auto;
    }

    #input {
        display: block;
        margin: auto
    }

    #mainBody {
        background: url(/img/a5596ffd4897b35688d3b3b882d7919d.jpg);

    }

    #text {
        font-size: 3040px;
        padding: 10px;
        border-radius: 10px;
        margin: 10px;
    }
</style>



<div class="container h-100">
    <div class="searchBox d-flex flex-row justify-content-center align-items-center">
        <div class="searchBoxContent">
            <form method="get">
                <div class="dropoff form-row">
                    <div class="form-group col-md-5">
                        <label for="location">LOCATIONS</label>
                        <select id="location" class="form-control">
                            <option>Rotterdam, Netherlands</option>
                            <option>Amsterdam, Netherlands</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg col-md-6 ml-auto"> Get information </button>
                </div>
            </form>
        </div>
    </div>
</div>

<p>belangrijke informatie over de gekozen locatie</p>