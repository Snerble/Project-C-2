@page "/locations"
@inject AddlocationServices service
@inject AppDbContext dbContext
@*Deze razor component is voor het aanmaken van locations pagina*@

<h1>Locations work in progress</h1>



<style>
    button {
        font-size: 40px;
        padding: 10px;
        border-radius: 10px;
        margin: 10px;
        float: left;
        margin-left: auto;
    }

    #container {
        text-align: center;
        align-items: center;
        margin-left: auto;
    }

    #input {
        display: block;
        margin: auto
    }

    #mainBody {
        background: url(/img/a5596ffd4897b35688d3b3b882d7919d.jpg);
    }

    #text {
        font-size: 3040px;
        padding: 10px;
        border-radius: 10px;
        margin: 10px;
    }
</style>





<div class="col-12 d-flex justify-content-between">
    <div class="col-9">
        <div class="back container">
            

            <div class="customtablerow row bg-light">
                <table class="table">
                    <thead class="thead-light">
                        <tr>
                            
                            <th scope="col">Address</th>
                            <th scope="col">City</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (dbContext.Locations.Any())
                        {
                            @foreach (var location in dbContext.Locations)
                            {
                                var locationid = location.Id;
                                <tr @onclick= "@(e =>Lookup(locationid))" >
                                    <td>@location.City</td>

                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="6"><strong>No locations available</strong></td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<p>address: @a</p>
<p>zipcode: @c</p>
<p>country: @b</p>



@code{
    string a;
    string b;
    string c;
    private string signup;
    void Lookup(int locationid)
    {
        foreach(var location in dbContext.Locations)
        {
            if (location.Id == locationid)
            {
                a = location.Address;
                b = location.CountryCode;
                c = location.ZipCode;
            }
        }


    }
}






