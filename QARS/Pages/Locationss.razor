@page "/locations"
@inject AddlocationServices service
@inject AppDbContext dbContext
@*Deze razor component is voor het aanmaken van locations pagina*@

@attribute [NavigationTab("Locations", Index = 0)]

<h1 class="display-4">Car Rental Locations</h1>
<p class="lead">The locations beneath are the locations of our stores</p>

<style>
    button {
        font-size: 40px;
        padding: 10px;
        border-radius: 10px;
        margin: 10px;
        float: left;
        margin-left: auto;
    }

    #container {
        text-align: center;
        align-items: center;
        margin-left: auto;
    }

    #input {
        display: block;
        margin: auto
    }

    #mainBody {
        background: url(/img/a5596ffd4897b35688d3b3b882d7919d.jpg);
    }

    #text {
        font-size: 3040px;
        padding: 10px;
        border-radius: 10px;
        margin: 10px;
    }
</style>


<div class="col-12 d-flex justify-content-between">
    <div class="col-9">
        <div class="back container">


            <div class="customtablerow row bg-light">
                <table class="table">
                    <thead class="thead-light">
                        <tr>
                            @* names the columns *@
                            <th scope="col">Name</th>
                            <th scope="col">City</th>
                            <th scope="col">Country</th>

                        </tr>
                    </thead>
                    <tbody>
                        @* loop through the database to show the options.
                            makes the button press possible.  *@
                        @if (dbContext.Stores.Any())
                        {
                            @foreach (var store in dbContext.Stores)
                            {
                                var storeid = store.Id;
                                <tr @onclick="@(e =>Lookup(storeid))">
                                    <td>@store.Name</td>
                                    <td>@store.Location.City</td>
                                    <td>@store.Location.CountryCode</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="6"><strong>No locations available</strong></td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@if (displayLocations)
{
    <h1>@name</h1>
    <p>@description</p>
    <p>Address: @address, @Zipcode</p>
    <p>City & ountry: @city  @Country</p>
}


@code{
    string address;
    string Zipcode;
    string Country;
    string name;
    string city;
    string description;
    bool displayLocations = false;

    void Lookup(int storeid)
    {

        @* loops through stores if the right id is found it connects data to the variables. *@
    foreach (var store in dbContext.Stores)
    {
        if (store.Id == storeid)
        {
            name = store.Name;
            address = store.Location.Address;
            city = store.Location.City;
            Country = store.Location.CountryCode;
            Zipcode = store.Location.ZipCode;
            description = store.Description;
            displayLocations = true;
        }
    }
}
}






